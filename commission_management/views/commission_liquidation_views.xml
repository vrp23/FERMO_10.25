<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form -->
    <record id="view_commission_liquidation_form" model="ir.ui.view">
        <field name="name">commission.liquidation.form</field>
        <field name="model">commission.liquidation</field>
        <field name="arch" type="xml">
            <form string="Liquidación de Comisiones">
                <header>
                    <button name="action_calculate_commissions" 
                            string="Calcular Comisiones" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft' or not liquidation_type"/>
                    <button name="action_add_cost" 
                            string="Agregar Costo" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state != 'draft' or liquidation_type != 'caja'"/>
                    <button name="action_confirm" 
                            string="Confirmar" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"
                            confirm="¿Está seguro de confirmar esta liquidación?"/>
                    <button name="action_pay" 
                            string="Registrar Pago" 
                            type="object" 
                            class="btn-success"
                            invisible="state != 'confirmed'"
                            confirm="¿Confirmar el pago de esta liquidación? Se creará un movimiento en la wallet del operador."/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object"
                            invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_revert" 
                            string="Revertir" 
                            type="object"
                            class="btn-danger"
                            invisible="state != 'paid'"
                            confirm="¿Está seguro de revertir esta liquidación pagada?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_source_operations" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-list"
                                invisible="line_count == 0">
                            <field name="line_count" widget="statinfo" string="Líneas"/>
                        </button>
                        <button name="action_view_source_operations" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-file-text-o"
                                invisible="check_count == 0 or liquidation_type != 'cheques'">
                            <field name="check_count" widget="statinfo" string="Cheques"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" 
                            title="Revertida" 
                            bg_color="bg-danger" 
                            invisible="not reversed_by_id"/>
                    <widget name="web_ribbon" 
                            title="Es Reversión" 
                            bg_color="bg-warning" 
                            invisible="not is_reversal"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="operator_id" 
                                   readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                            <field name="liquidation_type" 
                                   readonly="state != 'draft'"/>
                            <field name="date" 
                                   readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="total_base" widget="monetary"/>
                            <field name="total_commission" widget="monetary" class="oe_highlight"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group invisible="liquidation_type != 'divisas'">
                        <group>
                            <field name="period_start" 
                                   required="liquidation_type == 'divisas'"
                                   readonly="state != 'draft'"/>
                            <field name="period_end" 
                                   required="liquidation_type == 'divisas'"
                                   readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Líneas de Comisión" name="lines">
                            <field name="line_ids" readonly="state not in ('draft', 'calculated')">
                                <tree editable="bottom" create="0">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="operation_date" optional="show"/>
                                    <field name="partner_id" optional="show"/>
                                    <field name="base_amount" sum="Total Base"/>
                                    <field name="commission_rate"/>
                                    <field name="commission_amount" sum="Total Comisión"/>
                                    <field name="source_reference" optional="hide"/>
                                    <button name="action_view_source" 
                                            string="Ver" 
                                            type="object" 
                                            icon="fa-external-link"
                                            class="btn-sm"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Información de Pago" name="payment" invisible="state not in ('confirmed', 'paid')">
                            <group>
                                <group>
                                    <field name="payment_date" readonly="1"/>
                                    <field name="wallet_movement_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="operator_partner_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Información de Reversión" name="reversal" invisible="not is_reversal and not reversed_by_id">
                            <group>
                                <group>
                                    <field name="is_reversal" readonly="1"/>
                                    <field name="reversal_liquidation_id" readonly="1" invisible="not is_reversal"/>
                                    <field name="reversed_by_id" readonly="1" invisible="not reversed_by_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Agregar observaciones..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_commission_liquidation_tree" model="ir.ui.view">
        <field name="name">commission.liquidation.tree</field>
        <field name="model">commission.liquidation</field>
        <field name="arch" type="xml">
            <tree string="Liquidaciones de Comisiones" 
                  decoration-success="state == 'paid'"
                  decoration-warning="state == 'confirmed'"
                  decoration-muted="state == 'cancelled'"
                  decoration-danger="is_reversal">
                <field name="name"/>
                <field name="date"/>
                <field name="operator_id"/>
                <field name="liquidation_type"/>
                <field name="line_count" string="Líneas"/>
                <field name="total_commission" widget="monetary" sum="Total"/>
                <field name="state" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="is_reversal" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_commission_liquidation_search" model="ir.ui.view">
        <field name="name">commission.liquidation.search</field>
        <field name="model">commission.liquidation</field>
        <field name="arch" type="xml">
            <search string="Buscar Liquidaciones">
                <field name="name"/>
                <field name="operator_id"/>
                <field name="liquidation_type"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmadas" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Pagadas" name="paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="Cheques" name="type_cheques" domain="[('liquidation_type', '=', 'cheques')]"/>
                <filter string="Divisas" name="type_divisas" domain="[('liquidation_type', '=', 'divisas')]"/>
                <filter string="Caja" name="type_caja" domain="[('liquidation_type', '=', 'caja')]"/>
                <separator/>
                <filter string="Este Mes" name="this_month" 
                        domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01')),
                                ('date', '&lt;', (datetime.datetime.now() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="Mes Anterior" name="last_month"
                        domain="[('date', '&gt;=', (datetime.datetime.now() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                ('date', '&lt;', datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Operador" name="group_operator" context="{'group_by': 'operator_id'}"/>
                    <filter string="Tipo" name="group_type" context="{'group_by': 'liquidation_type'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Mes" name="group_month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_commission_liquidation_kanban" model="ir.ui.view">
        <field name="name">commission.liquidation.kanban</field>
        <field name="model">commission.liquidation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="operator_id"/>
                <field name="liquidation_type"/>
                <field name="date"/>
                <field name="total_commission"/>
                <field name="state"/>
                <field name="currency_id"/>
                <progressbar field="state" 
                            colors='{"draft": "secondary", "confirmed": "warning", "paid": "success", "cancelled": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="total_commission" widget="monetary"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="operator_id" widget="many2one_avatar_user"/>
                                    <span class="ms-2"><field name="liquidation_type"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'secondary', 'confirmed': 'warning', 'paid': 'success', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_commission_liquidation" model="ir.actions.act_window">
        <field name="name">Liquidaciones de Operadores</field>
        <field name="res_model">commission.liquidation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_commission_liquidation_search"/>
        <field name="context">{'search_default_group_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva liquidación de comisiones
            </p>
            <p>
                Las liquidaciones permiten calcular y pagar las comisiones
                de los operadores por sus operaciones de cheques, divisas y caja.
            </p>
        </field>
    </record>
</odoo>