<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_commission_cost_cashbox_wizard_form" model="ir.ui.view">
        <field name="name">commission.cost.cashbox.wizard.form</field>
        <field name="model">commission.cost.cashbox.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar Costo/Gasto">
                <group>
                    <field name="liquidation_id" invisible="1"/>
                    <field name="description"/>
                    <field name="amount" widget="monetary"/>
                    <field name="date"/>
                    <field name="cost_type"/>
                </group>
                <group>
                    <field name="notes" placeholder="Notas adicionales..."/>
                </group>
                <footer>
                    <button name="action_confirm" 
                            string="Registrar" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- AcciÃ³n del wizard -->
    <record id="action_commission_cost_cashbox_wizard" model="ir.actions.act_window">
        <field name="name">Registrar Costo</field>
        <field name="res_model">commission.cost.cashbox.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_commission_cost_cashbox_wizard_form"/>
    </record>
</odoo>