<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_commission_cheques_wizard_form" model="ir.ui.view">
        <field name="name">commission.cheques.wizard.form</field>
        <field name="model">commission.cheques.wizard</field>
        <field name="arch" type="xml">
            <form string="Liquidar Comisiones de Cheques">
                <sheet>
                    <group>
                        <group>
                            <field name="operator_id"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="commission_rate" widget="percentage"/>
                        </group>
                        <group>
                            <field name="include_sold"/>
                            <field name="include_rejected"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="check_count"/>
                            <field name="total_base" widget="monetary"/>
                            <field name="total_commission" widget="monetary" class="oe_highlight"/>
                        </group>
                    </group>
                    <separator string="Líneas de Comisión"/>
                    <field name="line_ids" readonly="1">
                        <tree editable="bottom" create="0" delete="0"
                              decoration-danger="base_amount &lt; 0"
                              decoration-success="base_amount &gt; 0">
                            <field name="sequence" widget="handle"/>
                            <field name="check_number"/>
                            <field name="bank_name"/>
                            <field name="operation_date"/>
                            <field name="fecha_pago"/>
                            <field name="partner_id"/>
                            <field name="purchase_price" widget="monetary"/>
                            <field name="sale_price" widget="monetary"/>
                            <field name="base_amount" widget="monetary" sum="Total Base"/>
                            <field name="commission_rate" widget="percentage"/>
                            <field name="commission_amount" widget="monetary" sum="Total Comisión"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_calculate" 
                            string="Calcular Comisiones" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_create_liquidation" 
                            string="Crear Liquidación" 
                            type="object" 
                            class="btn-success"
                            invisible="not line_ids"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Acción del wizard -->
    <record id="action_commission_cheques_wizard" model="ir.actions.act_window">
        <field name="name">Nueva Liquidación de Cheques</field>
        <field name="res_model">commission.cheques.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_commission_cheques_wizard_form"/>
    </record>
</odoo>