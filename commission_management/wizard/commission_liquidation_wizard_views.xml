<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard principal de liquidación -->
    <record id="view_commission_liquidation_wizard_form" model="ir.ui.view">
        <field name="name">commission.liquidation.wizard.form</field>
        <field name="model">commission.liquidation.wizard</field>
        <field name="arch" type="xml">
            <form string="Nueva Liquidación de Comisiones">
                <group>
                    <field name="operator_id" options="{'no_create': True}"/>
                    <field name="liquidation_type"/>
                    <field name="date"/>
                </group>
                <group invisible="liquidation_type != 'divisas'">
                    <field name="period_start" required="liquidation_type == 'divisas'"/>
                    <field name="period_end" required="liquidation_type == 'divisas'"/>
                </group>
                <footer>
                    <button name="action_create_liquidation" 
                            string="Crear Liquidación" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del wizard -->
    <record id="action_commission_liquidation_wizard" model="ir.actions.act_window">
        <field name="name">Nueva Liquidación</field>
        <field name="res_model">commission.liquidation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>