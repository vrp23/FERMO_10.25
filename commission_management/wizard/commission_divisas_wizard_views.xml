<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_commission_divisas_wizard_form" model="ir.ui.view">
        <field name="name">commission.divisas.wizard.form</field>
        <field name="model">commission.divisas.wizard</field>
        <field name="arch" type="xml">
            <form string="Liquidar Comisiones de Divisas">
                <sheet>
                    <group>
                        <group>
                            <field name="operator_id"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="commission_rate" widget="percentage"/>
                        </group>
                        <group>
                            <field name="include_usd"/>
                            <field name="include_usdt"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="operation_count"/>
                            <field name="total_base" widget="monetary"/>
                            <field name="total_base_usd" widget="monetary"/>
                            <field name="total_commission" widget="monetary" class="oe_highlight"/>
                        </group>
                    </group>
                    <separator string="Líneas de Comisión"/>
                    <field name="line_ids" readonly="1">
                        <tree editable="bottom" create="0" delete="0"
                              decoration-success="profit_currency == 'USD'"
                              decoration-info="profit_currency == 'ARS'">
                            <field name="sequence" widget="handle"/>
                            <field name="operation_number"/>
                            <field name="operation_date"/>
                            <field name="partner_id"/>
                            <field name="currency_type"/>
                            <field name="amount"/>
                            <field name="exchange_rate"/>
                            <field name="base_amount" sum="Total Base"/>
                            <field name="profit_currency"/>
                            <field name="commission_rate" widget="percentage"/>
                            <field name="commission_amount" widget="monetary" sum="Total Comisión"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_calculate" 
                            string="Calcular Comisiones" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_create_liquidation" 
                            string="Crear Liquidación" 
                            type="object" 
                            class="btn-success"
                            invisible="not line_ids"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Acción del wizard -->
    <record id="action_commission_divisas_wizard" model="ir.actions.act_window">
        <field name="name">Nueva Liquidación de Divisas</field>
        <field name="res_model">commission.divisas.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_commission_divisas_wizard_form"/>
    </record>
</odoo>